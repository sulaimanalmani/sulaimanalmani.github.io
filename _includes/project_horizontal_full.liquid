<div class="col-12 mb-4">
  <div class="card project-card shadow-sm p-3 h-100">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-2">
      <h3 class="h5 mb-0">{{ project.title }}</h3>
      {% if project.links %}
        <div class="d-flex flex-wrap gap-2">
          {% for l in project.links %}
            <a class="btn btn-sm btn-outline-primary" href="{{ l.url }}" target="_blank" rel="noopener">{{ l.name }}</a>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {% if project.description %}
      <p class="text-muted mb-3">{{ project.description }}</p>
    {% endif %}

    {% if project.tools %}
      <div class="mb-2">
        <div class="fw-bold small text-uppercase text-secondary mb-1">Tools</div>
        <div class="d-flex flex-wrap gap-2">
          {% for t in project.tools %}
            <span class="badge rounded-pill bg-secondary-subtle text-secondary">{{ t }}</span>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if project.publications %}
      <div class="mt-3">
        <div class="fw-bold small text-uppercase text-secondary mb-1">Publications</div>
        <ul class="list-unstyled small mb-0">
          {% for p in project.publications %}
            <li class="mb-1">
              {% if p.url %}
                <a href="{{ p.url }}" target="_blank" rel="noopener">{{ p.title }}</a>
              {% else %}
                {{ p.title }}
              {% endif %}
              {% if p.venue %}<span class="text-muted"> â€” {{ p.venue }}</span>{% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
</div>
